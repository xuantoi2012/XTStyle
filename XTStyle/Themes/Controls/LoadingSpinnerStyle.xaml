<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:XTStyle.Controls">

    <Style TargetType="{x:Type local:LoadingSpinner}">
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Diameter" Value="40"/>
        <Setter Property="Thickness" Value="4"/>
        <Setter Property="SpinnerColor" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:LoadingSpinner}">
                    <Viewbox Width="{TemplateBinding Diameter}" 
                           Height="{TemplateBinding Diameter}">
                        <Grid>
                            <Ellipse Width="40" Height="40"
                                   Stroke="{TemplateBinding SpinnerColor}"
                                   StrokeThickness="{TemplateBinding Thickness}"
                                   StrokeDashArray="30,10"
                                   StrokeStartLineCap="Round"
                                   StrokeEndLineCap="Round"
                                   RenderTransformOrigin="0.5,0.5">
                                <Ellipse.RenderTransform>
                                    <RotateTransform x:Name="PART_RotateTransform" Angle="0"/>
                                </Ellipse.RenderTransform>
                            </Ellipse>
                        </Grid>
                    </Viewbox>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
