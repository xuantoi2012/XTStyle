<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:XTStyle.Controls"
                    xmlns:converters="clr-namespace:XTStyle.Converters">

    <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>

    <Style TargetType="{x:Type local:EmptyState}">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Padding" Value="40"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:EmptyState}">
                    <StackPanel HorizontalAlignment="Center" 
                              VerticalAlignment="Center"
                              Margin="{TemplateBinding Padding}">
                        <!-- Icon -->
                        <ContentPresenter Content="{TemplateBinding Icon}"
                                        HorizontalAlignment="Center">
                            <ContentPresenter.Resources>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontSize" Value="64"/>
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Style>
                            </ContentPresenter.Resources>
                        </ContentPresenter>

                        <!-- Title -->
                        <TextBlock Text="{TemplateBinding Title}"
                                 FontSize="18"
                                 FontWeight="SemiBold"
                                 Foreground="{StaticResource TextPrimaryBrush}"
                                 HorizontalAlignment="Center"
                                 Margin="0,16,0,8"/>

                        <!-- Message -->
                        <TextBlock Text="{TemplateBinding Message}"
                                 FontSize="13"
                                 Foreground="{StaticResource TextSecondaryBrush}"
                                 HorizontalAlignment="Center"
                                 TextAlignment="Center"
                                 TextWrapping="Wrap"
                                 MaxWidth="400"
                                 Margin="0,0,0,20"/>

                        <!-- Action Button -->
                        <ContentPresenter Content="{TemplateBinding ActionButton}"
                                        HorizontalAlignment="Center"
                                        Visibility="{TemplateBinding ActionButton, Converter={StaticResource NullToVisibilityConverter}}"/>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
