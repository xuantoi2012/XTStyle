<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:XTStyle.Controls">

    <Style TargetType="{x:Type local:Badge}">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:Badge}">
                    <Border x:Name="border"
                            Background="{StaticResource BorderBrush}"
                            CornerRadius="4"
                            Padding="{TemplateBinding Padding}">
                        <TextBlock Text="{TemplateBinding Text}"
                                 FontSize="{TemplateBinding FontSize}"
                                 FontWeight="{TemplateBinding FontWeight}"
                                 Foreground="{StaticResource TextPrimaryBrush}"
                                 HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                 VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>

                    <ControlTemplate.Triggers>
                        <!-- Primary Type -->
                        <Trigger Property="Type" Value="Primary">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                            <Setter TargetName="border" Property="TextBlock.Foreground" Value="White"/>
                        </Trigger>

                        <!-- Success Type -->
                        <Trigger Property="Type" Value="Success">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource SecondaryBrush}"/>
                            <Setter TargetName="border" Property="TextBlock.Foreground" Value="White"/>
                        </Trigger>

                        <!-- Warning Type -->
                        <Trigger Property="Type" Value="Warning">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}"/>
                            <Setter TargetName="border" Property="TextBlock.Foreground" Value="White"/>
                        </Trigger>

                        <!-- Danger Type -->
                        <Trigger Property="Type" Value="Danger">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource DangerBrush}"/>
                            <Setter TargetName="border" Property="TextBlock.Foreground" Value="White"/>
                        </Trigger>

                        <!-- Info Type -->
                        <Trigger Property="Type" Value="Info">
                            <Setter TargetName="border" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#3B82F6"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="border" Property="TextBlock.Foreground" Value="White"/>
                        </Trigger>

                        <!-- Dot Style -->
                        <Trigger Property="IsDot" Value="True">
                            <Setter Property="Width" Value="8"/>
                            <Setter Property="Height" Value="8"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter TargetName="border" Property="CornerRadius" Value="4"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
