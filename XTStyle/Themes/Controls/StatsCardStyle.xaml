<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:XTStyle.Controls"
                    xmlns:converters="clr-namespace:XTStyle.Converters">

    <converters:StringEmptyToVisibilityConverter x:Key="StringEmptyToVisibilityConverter"/>

    <Style TargetType="{x:Type local:StatsCard}">
        <Setter Property="Background" Value="{StaticResource CardBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="MinWidth" Value="200"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:StatsCard}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8"
                            Padding="{TemplateBinding Padding}">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="12" ShadowDepth="2" 
                                            Opacity="0.08" Color="#000000"/>
                        </Border.Effect>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Title -->
                            <TextBlock Grid.Row="0"
                                     Text="{TemplateBinding Title}"
                                     FontSize="13"
                                     Foreground="{StaticResource TextSecondaryBrush}"
                                     Margin="0,0,0,8"/>

                            <!-- Value and Icon -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                         Text="{TemplateBinding Value}"
                                         FontSize="28"
                                         FontWeight="Bold"
                                         Foreground="{StaticResource TextPrimaryBrush}"
                                         VerticalAlignment="Center"/>

                                <Border Grid.Column="1"
                                      Background="{TemplateBinding IconBackground}"
                                      Width="48" Height="48"
                                      CornerRadius="8"
                                      VerticalAlignment="Center">
                                    <ContentPresenter Content="{TemplateBinding Icon}"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center">
                                        <ContentPresenter.Resources>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontSize" Value="24"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Style>
                                        </ContentPresenter.Resources>
                                    </ContentPresenter>
                                </Border>
                            </Grid>

                            <!-- Change Indicator -->
                            <StackPanel Grid.Row="2" 
                                      Orientation="Horizontal"
                                      Margin="0,12,0,0"
                                      Visibility="{TemplateBinding ChangePercent, Converter={StaticResource StringEmptyToVisibilityConverter}}">
                                <TextBlock x:Name="arrow" Text="↑" FontSize="16" 
                                         VerticalAlignment="Center"
                                         Margin="0,0,4,0"/>
                                <TextBlock Text="{TemplateBinding ChangePercent}"
                                         FontSize="13"
                                         FontWeight="Medium"
                                         VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsPositiveChange" Value="True">
                            <Setter TargetName="arrow" Property="Foreground" Value="{StaticResource SecondaryBrush}"/>
                            <Setter TargetName="arrow" Property="Text" Value="↑"/>
                        </Trigger>
                        <Trigger Property="IsPositiveChange" Value="False">
                            <Setter TargetName="arrow" Property="Foreground" Value="{StaticResource DangerBrush}"/>
                            <Setter TargetName="arrow" Property="Text" Value="↓"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
