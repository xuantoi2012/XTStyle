<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:XTStyle.Controls"
                    xmlns:converters="clr-namespace:XTStyle.Converters">

    <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>

    <Style TargetType="{x:Type local:Card}">
        <Setter Property="Background" Value="{StaticResource CardBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:Card}">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                        <Border.Effect>
                            <DropShadowEffect x:Name="shadow" 
                                            BlurRadius="16" 
                                            ShadowDepth="2" 
                                            Opacity="0.08" 
                                            Color="#000000"/>
                        </Border.Effect>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <Border Grid.Row="0" 
                                  Padding="16,12"
                                  BorderBrush="{StaticResource BorderBrush}"
                                  BorderThickness="0,0,0,1"
                                  Visibility="{TemplateBinding Header, Converter={StaticResource NullToVisibilityConverter}}">
                                <ContentPresenter Content="{TemplateBinding Header}"/>
                            </Border>

                            <!-- Content -->
                            <ContentPresenter Grid.Row="1" 
                                            Margin="{TemplateBinding Padding}"/>

                            <!-- Footer -->
                            <Border Grid.Row="2" 
                                  Padding="16,12"
                                  BorderBrush="{StaticResource BorderBrush}"
                                  BorderThickness="0,1,0,0"
                                  Visibility="{TemplateBinding Footer, Converter={StaticResource NullToVisibilityConverter}}">
                                <ContentPresenter Content="{TemplateBinding Footer}"/>
                            </Border>
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsHoverable" Value="True"/>
                                <Condition Property="IsMouseOver" Value="True"/>
                            </MultiTrigger.Conditions>
                            <MultiTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="shadow"
                                                       Storyboard.TargetProperty="BlurRadius"
                                                       To="24"
                                                       Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="shadow"
                                                       Storyboard.TargetProperty="Opacity"
                                                       To="0.15"
                                                       Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <ThicknessAnimation Storyboard.TargetName="border"
                                                          Storyboard.TargetProperty="Margin"
                                                          To="0,-2,0,2"
                                                          Duration="0:0:0.2">
                                            <ThicknessAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </ThicknessAnimation.EasingFunction>
                                        </ThicknessAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiTrigger.EnterActions>
                            <MultiTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="shadow"
                                                       Storyboard.TargetProperty="BlurRadius"
                                                       To="16"
                                                       Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="shadow"
                                                       Storyboard.TargetProperty="Opacity"
                                                       To="0.08"
                                                       Duration="0:0:0.2"/>
                                        <ThicknessAnimation Storyboard.TargetName="border"
                                                          Storyboard.TargetProperty="Margin"
                                                          To="0"
                                                          Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiTrigger.ExitActions>
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
