<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:XTStyle.Controls">

    <Style TargetType="{x:Type local:ProgressTracker}">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ProgressTracker}">
                    <ItemsControl ItemsSource="{TemplateBinding ItemsSource}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="{Binding Orientation, RelativeSource={RelativeSource TemplatedParent}}"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                    <!-- Step Circle -->
                                    <Grid>
                                        <Ellipse x:Name="circle"
                                               Width="32" Height="32"
                                               Fill="{StaticResource BorderBrush}"
                                               Stroke="{StaticResource BorderBrush}"
                                               StrokeThickness="2"/>
                                        <TextBlock x:Name="stepNumber"
                                                 Text="{Binding PageNumber}"
                                                 FontSize="14"
                                                 FontWeight="Medium"
                                                 Foreground="{StaticResource TextSecondaryBrush}"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"/>
                                        <TextBlock x:Name="checkmark"
                                                 Text="âœ“"
                                                 FontSize="18"
                                                 Foreground="White"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"
                                                 Visibility="Collapsed"/>
                                    </Grid>

                                    <!-- Step Info -->
                                    <StackPanel Margin="12,0,32,0" VerticalAlignment="Center">
                                        <TextBlock x:Name="title"
                                                 Text="{Binding Title}"
                                                 FontSize="13"
                                                 FontWeight="Medium"
                                                 Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="{Binding Description}"
                                                 FontSize="11"
                                                 Foreground="{StaticResource TextSecondaryBrush}"
                                                 Margin="0,2,0,0"/>
                                    </StackPanel>
                                </StackPanel>

                                <DataTemplate.Triggers>
                                    <!-- Completed Step -->
                                    <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                                        <Setter TargetName="circle" Property="Fill" Value="{StaticResource SecondaryBrush}"/>
                                        <Setter TargetName="circle" Property="Stroke" Value="{StaticResource SecondaryBrush}"/>
                                        <Setter TargetName="stepNumber" Property="Visibility" Value="Collapsed"/>
                                        <Setter TargetName="checkmark" Property="Visibility" Value="Visible"/>
                                    </DataTrigger>

                                    <!-- Current Step -->
                                    <DataTrigger Binding="{Binding IsCurrent}" Value="True">
                                        <Setter TargetName="circle" Property="Fill" Value="{StaticResource PrimaryBrush}"/>
                                        <Setter TargetName="circle" Property="Stroke" Value="{StaticResource PrimaryBrush}"/>
                                        <Setter TargetName="stepNumber" Property="Foreground" Value="White"/>
                                        <Setter TargetName="title" Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                                        <Setter TargetName="title" Property="FontWeight" Value="SemiBold"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
