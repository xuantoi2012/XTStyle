<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/XTStyle;component/Themes/Brushes.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- ============================================ -->
    <!-- CARD STYLES FOR BORDER -->
    <!-- ============================================ -->

    <!-- Base Card Style -->
    <Style x:Key="ModernCard" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="0,8"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#000000" 
                                  Opacity="0.05" 
                                  BlurRadius="8" 
                                  ShadowDepth="1"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Card with Hover Effect -->
    <Style x:Key="HoverableCard" TargetType="Border" BasedOn="{StaticResource Card}">
        <Setter Property="Cursor" Value="Hand"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="#000000" 
                                          Opacity="0.15" 
                                          BlurRadius="16" 
                                          ShadowDepth="2"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Compact Card (less padding) -->
    <Style x:Key="CompactCard" TargetType="Border" BasedOn="{StaticResource Card}">
        <Setter Property="Padding" Value="12"/>
        <Setter Property="Margin" Value="0,4"/>
    </Style>

    <!-- Elevated Card (more shadow) -->
    <Style x:Key="ElevatedCard" TargetType="Border" BasedOn="{StaticResource Card}">
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#000000" 
                                  Opacity="0.1" 
                                  BlurRadius="12" 
                                  ShadowDepth="2"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Flat Card (no shadow) -->
    <Style x:Key="FlatCard" TargetType="Border" BasedOn="{StaticResource Card}">
        <Setter Property="Effect" Value="{x:Null}"/>
    </Style>

    <!-- Primary Card (with primary border) -->
    <Style x:Key="PrimaryCard" TargetType="Border" BasedOn="{StaticResource Card}">
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <!-- Success Card -->
    <Style x:Key="SuccessCard" TargetType="Border" BasedOn="{StaticResource Card}">
        <Setter Property="BorderBrush" Value="{StaticResource SuccessBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <!-- Danger Card -->
    <Style x:Key="DangerCard" TargetType="Border" BasedOn="{StaticResource Card}">
        <Setter Property="BorderBrush" Value="{StaticResource DangerBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <!-- Warning Card -->
    <Style x:Key="WarningCard" TargetType="Border" BasedOn="{StaticResource Card}">
        <Setter Property="BorderBrush" Value="{StaticResource WarningBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

</ResourceDictionary>