<Window x:Class="XTStyle.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:XTStyle.Controls;assembly=XTStyle"
        Title="XTStyle Controls Demo" 
        Height="700" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel MaxWidth="900">
            
            <!-- Header -->
            <TextBlock Text="ðŸŽ¨ XTStyle Controls Demo" 
                       FontSize="28" 
                       FontWeight="Bold"
                       Foreground="{StaticResource TextPrimaryBrush}"
                       Margin="0,0,0,30"/>

            <!-- SearchBox Demo -->
            <GroupBox Header="SearchBox" Style="{StaticResource ModernGroupBox}" Margin="0,0,0,20">
                <StackPanel>
                    <local:SearchBox x:Name="SearchBox1" 
                                    Placeholder="Search products..."
                                    Width="400"
                                    HorizontalAlignment="Left"/>
                    <TextBlock Text="{Binding ElementName=SearchBox1, Path=Text, StringFormat='Search text: {0}'}"
                              Margin="0,10,0,0"
                              Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
            </GroupBox>

            <!-- NumericUpDown Demo -->
            <GroupBox Header="NumericUpDown" Style="{StaticResource ModernGroupBox}" Margin="0,0,0,20">
                <StackPanel>
                    <local:NumericUpDown x:Name="NumericUpDown1"
                                        Value="10"
                                        Minimum="0"
                                        Maximum="100"
                                        Step="5"
                                        DecimalPlaces="0"
                                        Width="200"
                                        HorizontalAlignment="Left"/>
                    <TextBlock Text="{Binding ElementName=NumericUpDown1, Path=Value, StringFormat='Value: {0}'}"
                              Margin="0,10,0,0"
                              Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
            </GroupBox>

            <!-- ToggleSwitch Demo -->
            <GroupBox Header="ToggleSwitch" Style="{StaticResource ModernGroupBox}" Margin="0,0,0,20">
                <StackPanel>
                    <local:ToggleSwitch x:Name="ToggleSwitch1"
                                       OnText="Enabled"
                                       OffText="Disabled"
                                       HorizontalAlignment="Left"/>
                    <TextBlock Text="{Binding ElementName=ToggleSwitch1, Path=IsOn, StringFormat='Is On: {0}'}"
                              Margin="0,10,0,0"
                              Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
            </GroupBox>

            <!-- Badge Demo -->
            <GroupBox Header="Badge" Style="{StaticResource ModernGroupBox}" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal">
                    <local:Badge Text="NEW" Type="Primary" Margin="0,0,10,0"/>
                    <local:Badge Text="5" Type="Danger" Margin="0,0,10,0"/>
                    <local:Badge Text="âœ“" Type="Success" Margin="0,0,10,0"/>
                    <local:Badge Text="!" Type="Warning" Margin="0,0,10,0"/>
                    <local:Badge IsDot="True" Type="Info"/>
                </StackPanel>
            </GroupBox>

            <!-- Card Demo -->
            <GroupBox Header="Card" Style="{StaticResource ModernGroupBox}" Margin="0,0,0,20">
                <local:Card IsHoverable="True">
                    <local:Card.Header>
                        <TextBlock Text="Sample Card" FontSize="16" FontWeight="SemiBold"/>
                    </local:Card.Header>
                    
                    <TextBlock Text="This is a card component with header and content. It supports hover effects and can contain any content."
                              TextWrapping="Wrap"
                              Margin="0,10"/>
                    
                    <local:Card.Footer>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Cancel" Style="{StaticResource SecondaryButton}" Margin="0,0,10,0"/>
                            <Button Content="OK" Style="{StaticResource ModernButton}"/>
                        </StackPanel>
                    </local:Card.Footer>
                </local:Card>
            </GroupBox>

            <!-- LoadingSpinner Demo -->
            <GroupBox Header="LoadingSpinner" Style="{StaticResource ModernGroupBox}" Margin="0,0,0,20">
                <StackPanel>
                    <local:LoadingSpinner IsSpinning="True"
                                         Diameter="50"
                                         SpinnerColor="{StaticResource PrimaryBrush}"
                                         Thickness="4"
                                         HorizontalAlignment="Left"/>
                </StackPanel>
            </GroupBox>

            <!-- Pagination Demo -->
            <GroupBox Header="Pagination" Style="{StaticResource ModernGroupBox}" Margin="0,0,0,20">
                <local:Pagination TotalItems="150"
                                 CurrentPage="1"
                                 PageSize="10"
                                 HorizontalAlignment="Center"/>
            </GroupBox>

            <!-- Buttons Demo -->
            <GroupBox Header="Buttons" Style="{StaticResource ModernGroupBox}" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal">
                    <Button Content="Primary" Style="{StaticResource ModernButton}" Margin="0,0,10,0"/>
                    <Button Content="Secondary" Style="{StaticResource SecondaryButton}" Margin="0,0,10,0"/>
                    <Button Content="Success" Style="{StaticResource SuccessButton}" Margin="0,0,10,0"/>
                    <Button Content="Danger" Style="{StaticResource DangerButton}" Margin="0,0,10,0"/>
                    <Button Content="Warning" Style="{StaticResource WarningButton}"/>
                </StackPanel>
            </GroupBox>

            <!-- Form Controls Demo -->
            <GroupBox Header="Form Controls" Style="{StaticResource ModernGroupBox}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Name:" Style="{StaticResource FieldLabel}"/>
                        <TextBox Text="John Doe" Style="{StaticResource ModernTextBox}" Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Email:" Style="{StaticResource FieldLabel}"/>
                        <TextBox Text="john@example.com" Style="{StaticResource ModernTextBox}" Margin="0,0,0,15"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="Category:" Style="{StaticResource FieldLabel}"/>
                        <ComboBox Style="{StaticResource ModernComboBox}" Margin="0,0,0,15">
                            <ComboBoxItem Content="Option 1" IsSelected="True"/>
                            <ComboBoxItem Content="Option 2"/>
                            <ComboBoxItem Content="Option 3"/>
                        </ComboBox>
                        
                        <CheckBox Content="I agree to terms" Style="{StaticResource ModernCheckBox}"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

        </StackPanel>
    </ScrollViewer>
</Window>
